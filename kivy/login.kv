#:kivy 2.3.0
<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 10

        Label:
            text: "LOGIN"
            font_size: 32
            bold: True

        TextInput:
            id: username
            hint_text: "Email"
            multiline: False
            size_hint_y: 0.2
            font_size: 18
            padding: [10, 10]

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False
            size_hint_y: 0.2
            font_size: 18
            padding: [10, 10]

        Button:
            text: "Lupa kata sandi?"
            size_hint_y: None
            height: 30
            background_color: 0, 0, 0, 0
            color: 0, 0, 1, 1
            on_press: root.go_to_resetpw()

        Button:
            text: "Login"
            size_hint_y: 0.2
            font_size: 18
            on_release: root.login()

        Button:
            text: "Sign Up"
            size_hint_y: 0.2
            font_size: 18
            on_release: root.go_to_signup()

        Label:
            id: login_message
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: 0.2