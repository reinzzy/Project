#:kivy 2.3.0
<EmployeeListScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [15, 15]
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 60
            canvas.before:
                Color:
                    rgba: 0.2, 0.6, 0.8, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]
            Label:
                text: 'Daftar Karyawan'
                font_size: 28
                bold: True
                color: [1, 1, 1, 1]
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                padding_y: 15

        ScrollView:
            size_hint: 1, 0.8
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                id: employee_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 15
                padding: [15, 15]

        Button:
            text: "Kembali ke Main"
            size_hint_y: None
            height: 50
            font_size: 18
            bold: True
            color: [1, 1, 1, 1]
            background_normal: ''
            background_color: [0.1, 0.5, 0.7, 1]
            on_release: root.go_back()
