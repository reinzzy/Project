#:kivy 2.3.0
<ProfileScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 20]
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, None
            height: '150dp'
            padding: [15, 15]
            spacing: 10
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 0.2, 0.6, 0.8, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]

            Label:
                text: "Profil Admin"
                font_size: 24
                color: 1, 1, 1, 1
                bold: True
                halign: 'center'

        Image:
            id: profile_image
            source: 'asset/profile_icon.png'
            size_hint: None, None
            size: 120, 120
            allow_stretch: True
            keep_ratio: True
            pos_hint: {'center_x': 0.5}

        Button:
            text: 'Unggah Foto'
            size_hint_y: None
            height: '40dp'
            on_release: root.open_filechooser()
            background_color: 0.2, 0.6, 0.8, 1
            color: 1, 1, 1, 1

        MDTextField:
            id: name_input
            hint_text: "Nama Lengkap"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
        
        MDTextField:
            id: birth_date_input
            hint_text: "Tanggal Lahir (DD-MM-YYYY)"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: address_input
            hint_text: "Alamat"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}

        MDTextField:
            id: email_input
            hint_text: "Email"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}

        Button:
            text: "Konfirmasi"
            size_hint_y: None
            height: 40
            on_release: root.save_profile()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            spacing: 20
            padding: [20, 20]

            Button:
                text: 'Kembali'
                on_release: app.root.current = 'main'
                background_color: 0.3, 0.5, 0.8, 1
                color: 1, 1, 1, 1

            Button:
                text: 'Logout'
                on_release: root.show_logout_confirmation()
                background_color: 0.8, 0.2, 0.2, 1
                color: 1, 1, 1, 1

<LogoutPopup>:
    title: "Konfirmasi Logout"
    size_hint: 0.7, 0.4
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Apakah Anda yakin ingin logout?"
            font_size: 18
            halign: 'center'
            valign: 'middle'

        BoxLayout:
            size_hint_y: 0.3
            spacing: 10

            Button:
                text: "Ya"
                on_press: root.on_confirm()

            Button:
                text: "Tidak"
                on_press: root.dismiss()
