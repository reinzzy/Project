#:kivy 2.3.0
<EmployeeListScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        # Header
        BoxLayout:
            size_hint_y: None
            height: '60dp'
            canvas.before:
                Color:
                    rgba: 0.3, 0.5, 0.8, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                text: 'Daftar Karyawan'
                font_size: '24sp'
                color: 1, 1, 1, 1
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: '60dp'

        # Area untuk menampilkan tabel
        ScrollView:
            MDList:
                id: employee_list

        # Tombol Kembali
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            padding: dp(10)
            spacing: dp(10)

            MDRaisedButton:
                text: 'Kembali'
                on_release: root.go_back()
                size_hint_x: None
                width: dp(100)
                pos_hint: {"center_x": 0.5}
