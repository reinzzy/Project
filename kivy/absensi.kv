#:kivy 2.3.0
<AbsensiScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Black background color
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            padding: 10

            Button:
                text: 'Back'
                size_hint_x: 0.2
                on_press: app.root.current = 'main'
                background_color: 0.1, 0.1, 0.1, 1  # Dark gray button background
                color: 1, 1, 1, 1  # White text

            Label:
                text: "ABSENSI KARYAWAN\nPT. ABADI SELALU"
                halign: "center"
                size_hint_x: 0.9
                color: 1, 1, 1, 1  # White text
                text_size: self.size  

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint_y: 0.8

            MDList:
                id: employee_list
                background_color: 0, 0, 0, 1  # Black background
                color: 1, 1, 1, 1  # White text
