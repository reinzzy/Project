#:kivy 2.3.0
<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 10

        Label:
            text: "LOGIN"
            font_size: 32
            bold: True

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False

        Button:
            text: "LOGIN"
            size_hint: (1, 0.2)
            on_press: root.login()

        Button:
            text: "SIGN UP"
            size_hint: (1, 0.2)
            background_color: 0, 0.5, 1, 1
            on_press: root.manager.current = 'signup'

<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "SIGN UP"
            font_size: 32
            bold: True
            color: 0, 0.5, 1, 1

        TextInput:
            id: signup_username
            hint_text: "Username"
            multiline: False
            size_hint_y: 0.2
            font_size: 18
            padding: [10, 10]

        TextInput:
            id: signup_password
            hint_text: "Password"
            password: True
            multiline: False
            size_hint_y: 0.2
            font_size: 18
            padding: [10, 10]

        TextInput:
            id: verify_password
            hint_text: "Verify Password"
            password: True
            multiline: False
            size_hint_y: 0.2
            font_size: 18
            padding: [10, 10]

        Label:
            id: signup_message
            text: ""
            color: 1, 0, 0, 1
            font_size: 14

        Button:
            text: "Daftar"
            size_hint_y: 0.2
            font_size: 18
            background_color: 0, 0.5, 1, 1
            on_press: root.register()

        Button:
            text: "Kembali ke Login"
            size_hint_y: 0.2
            font_size: 16
            background_color: 0.7, 0.7, 0.7, 1
            on_press: root.manager.current = 'login'


<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgb: 0, 0, 0 
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: 0.1
            padding: 10
            spacing: 10

            Label:
                text: "Hi, ADMIN1"
                font_size: 18
                color: 1, 1, 1, 1
                halign: 'left'
                valign: 'middle'
                size_hint_x: 0.2

            Label:
                text: "PT. ABADI SELALU"
                font_size: 24
                bold: True
                color: 1, 1, 1, 1
                halign: 'center'
                valign: 'middle'
                size_hint_x: 0.6

            Button:
                size_hint: None, None
                size: dp(50), dp(50)
                background_normal: 'asset/profile_icon.png'
                background_down: 'asset/profile_icon.png'
                on_press: app.root.current = 'profile'

        BoxLayout:
            size_hint_y: 0.1
            padding: 10
            spacing: 10

            Label:
                text: "[u]Data Karyawan Yang Sudah Ter-Rekap[/u]"
                font_size: 16
                markup: True
                color: 0, 0.5, 1, 1
                halign: 'center'
                valign: 'middle'

        BoxLayout:
            size_hint_y: 0.2
            spacing: 5

            BoxLayout:
                canvas.before:
                    Color:
                        rgb: 0.3, 0.5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                canvas.before:
                    Color:
                        rgb: 1, 0.3, 0.3
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            size_hint_y: 0.05
            padding: 10
            spacing: 10

            Label:
                text: "Sudah"
                font_size: 16
                color: 1, 1, 1, 1  
                halign: 'center'
                valign: 'middle'

            Label:
                text: "Belum"
                font_size: 16
                color: 1, 1, 1, 1  
                halign: 'center'
                valign: 'middle'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.6
            padding: 10
            spacing: 10

            Button:
                text: "ABSENSI KARYAWAN"
                size_hint_y: 0.2
                background_color: 0.5, 0.5, 0.5, 1  
                color: 1, 1, 1, 1  
                font_size: 16
                on_press: app.root.current = 'absensi'

            Button:
                text: "DAFTAR KARYAWAN"
                size_hint_y: 0.2
                background_color: 0.5, 0.5, 0.5, 1  
                color: 1, 1, 1, 1  
                font_size: 16
                on_press: app.root.current = 'form'

            Button:
                text: "DAFTAR GAJI KARYAWAN"
                size_hint_y: 0.2
                background_color: 0.5, 0.5, 0.5, 1  
                color: 1, 1, 1, 1  
                font_size: 16

            Button:
                text: "CEK DATA GAJI KARYAWAN"
                size_hint_y: 0.2
                background_color: 0.5, 0.5, 0.5, 1  
                color: 1, 1, 1, 1  
                font_size: 16

